# Docker Environment Variables
# Copy this file to .env for docker-compose

# ========================================
# Backend Configuration
# ========================================

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Google Gemini Configuration (FREE alternative)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Supabase Configuration (Optional - for database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Firebase Configuration (Optional - for auth)
FIREBASE_CREDENTIALS_PATH=/app/credentials/firebase-credentials.json

# Lemon Squeezy Configuration (Optional - for payments)
LEMON_SQUEEZY_API_KEY=your-lemon-squeezy-api-key
LEMON_SQUEEZY_STORE_ID=your-store-id

# Application Configuration
DEBUG=False

# ========================================
# Frontend Configuration
# ========================================

# API Base URL (Docker internal or external)
VITE_API_BASE_URL=http://localhost:8000

# Firebase Configuration (for frontend)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abc123def456

# Supabase Configuration (for frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key


